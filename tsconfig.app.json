{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [ "src/**/*", "src/**/*.vue", "types/**/*", "script/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  }
}
